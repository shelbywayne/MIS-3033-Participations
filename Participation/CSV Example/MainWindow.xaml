<Window x:Class="CSV_Example.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CSV_Example"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ListBox x:Name="lstFile" Margin="0,201,0,0"/>
        <Button x:Name="btnValidate" Content="Validate" HorizontalAlignment="Left" Margin="582,46,0,0" VerticalAlignment="Top" Width="55" Click="btnValidate_Click"/>
        <TextBox x:Name="txtFilePath" HorizontalAlignment="Center" Margin="0,47,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="320"/>
        <Button x:Name="btnProcess" Content="Process" HorizontalAlignment="Center" Margin="0,90,0,0" VerticalAlignment="Top" Height="72" Width="144" IsEnabled="False" Click="btnProcess_Click"/>
        <Label Content="Enter file path:" HorizontalAlignment="Left" Margin="135,43,0,0" VerticalAlignment="Top" Width="88"/>

    </Grid>
</Window>
